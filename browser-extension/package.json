{
  "name": "vyna-live-extension",
  "version": "1.0.0",
  "description": "Browser extension for Vyna.live AI chat and notepad",
  "private": true,
  "scripts": {
    "dev": "vite build --watch",
    "build:tailwind": "npx tailwindcss -i ./styles/tailwind.css -o ./styles/popup.css --minify",
    "watch:tailwind": "npx tailwindcss -i ./styles/tailwind.css -o ./styles/popup.css --watch",
    "build": "vite build && zip -r ../vyna-extension.zip dist -x "*.git*" "*.zip""
  },
  "author": "Vyna.live",
  "license": "UNLICENSED",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  }
}
