{
  "manifest_version": 2,
  "name": "Vyna AI Assistant",
  "version": "1.0.0",
  "description": "AI assistant for content creators with smart note-taking and online research capabilities",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "https://vyna.live/*",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "extension@vyna.live",
      "strict_min_version": "57.0"
    }
  }
}