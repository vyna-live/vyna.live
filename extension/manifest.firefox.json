{
  "manifest_version": 2,
  "name": "Vyna AI Assistant",
  "version": "1.0.0",
  "description": "Access your Vyna AI Assistant directly from your browser",
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "https://*.vyna.live/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "extension@vyna.live",
      "strict_min_version": "57.0"
    }
  }
}
